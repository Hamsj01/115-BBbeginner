@model AddProjectViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-warning rounded h-100 p-4">
            <div class="d-flex justify-content-between mb-4">
                <h6 class="">Yeni Proje</h6>
                <a asp-area="Admin" asp-controller="Project" asp-action="Index" class="btn btn-info btn-sm">Vazgeç</a>
            </div>


            <form asp-area="Admin" asp-controller="Project" asp-action="Create">
                <div class="row">
                    <!-- Formun sol tarafı -->
                    <div class="col-md-8 col-sm-6">
                        <div class="mb-3">
                            <label class="form-label">Proje Adı</label>
                            <input asp-for="Name" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Proje Açıklaması</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Proje Yılı</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Proje Github Linki</label>
                            <input asp-for="GithubUrl" class="form-control">
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input">
                            <label class="form-check-label">Aktif</label>
                        </div>
                    </div>

                    <!-- Formun sağ tarafı -->
                    <div class="col-md-4 col-sm-6">
                        <div>
                            <label class="form-label">Kategori</label>
                            <select asp-for="CategoryId" asp-items="@Model.CategoryList"></select>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Resim</label>
                            <input asp-for="Image" type="file" id="image">
                            <img class="m-3 w-75" id="image-preview" src="" alt="">
                        </div>
                    </div>

                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>


@section ScriptsSection {
    <script>
        $("#image").on("change", function (e) {
            const selectedFiles = e.target.files;
            $("#image-preview").attr("src",window.URL.createObjectURL(selectedFiles[0]));
        })
    </script>
}